generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model JournalEntry {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  entryDate  DateTime  @db.Date
  topic      String
  moodColor  String?
  body       String
  title      String?
  tags       String[]
  userId     String    // Auth0 user ID of who created this entry
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt 
}
